extends ../layout

block content
    .container.mgTop70
        .row
            .col-md-12
                form.form-horizontal(method="post",action="/admin/blog/new")
                      input(type="hidden",name="blog[_id]",value="#{blog._id}")
                      .form-group
                         label.col-sm-2.control-label(for="inputTitle") 文章标题
                         .col-sm-10
                             input#inputTitle.form-control(type="text",name="blog[title]",value="#{blog.title}")
                      .form-group
                         label.col-sm-2.control-label(for="inputContent") 文章内容
                         .col-sm-10
                             input#inputContent.form-control(type="text",name="blog[content]",value="#{blog.content}")
                      input(type="hidden",name="blog[content]",id="info")
                      .form-group
                         label.col-sm-2.control-label(for="inputContent") 文章内容
                         .col-sm-10
                            script(id="editor" type="text/plain" style="height:500px;")
                      .form-group
                          .col-sm-offset-2.col-sm-10
                          input(type="button" name="submit" value="录入")
    script(src="/js/adminblog.js")